---
const { name, role, image } = Astro.props;
---

<section class="flex flex-col md:flex-row items-center gap-8">
  <img
    src={image}
    alt="Foto de perfil"
    class="w-40 h-40 rounded-full object-cover border-4 border-indigo-500"
  />

  <div>
    <h1 class="text-4xl font-bold">{name}</h1>
    <p class="text-indigo-400 mt-2 text-xl">{role}</p>
  </div>
</section>
