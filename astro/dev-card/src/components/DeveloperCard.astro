---
const {
  nombre,
  rol,
  experiencia,
  tecnologias
} = Astro.props;
---
<div class="max-w-sm rounded-xl border border-gray-800 bg-white p-6 shadow-md">
  <h2 class="text-2xl font-bold text-gray-800">{nombre}</h2>

  <p class="mt-1 text-sm text-gray-500">{rol}</p>

  <p class="mt-4 text-gray-700"><span class="font-semibold">Experiencia:</span> {experiencia}</p>

  <div class="mt-4">
    <p class="font-semibold text-gray-700 mb-2">Tecnolog√≠as:</p>
    <ul>
      { tecnologias.map((tech: string) => (
        <li class="rounded-full mt-3 bg-blue-100 px-3 py-1 text-sm text-blue-700">{tech}</li>
      ))}
    </ul>
  </div>
</div>
